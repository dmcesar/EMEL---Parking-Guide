<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="?attr/backgroundColor" >

    <LinearLayout
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/form_name"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/update_vehicle"
            style="@style/HighlightTextStyle"
            android:textColor="?attr/onBackgroundColor" />

        <include
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            layout="@layout/vehicles_list_item" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:gravity="center_vertical">

        <EditText
            android:id="@+id/input_brand"
            style="@style/EditTextStyle"
            android:layout_weight="4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:inputType="text"
            android:hint="@string/enter_brand" />

        <EditText
            android:id="@+id/input_plate_date"
            style="@style/EditTextStyle"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:inputType="date"
            android:hint="@string/enter_plate_date" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:gravity="center_vertical" >

            <EditText
                android:id="@+id/input_model"
                style="@style/EditTextStyle"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="40dp"
                android:inputType="text"
                android:hint="@string/enter_model" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal"
        android:weightSum="7"
        android:gravity="center_vertical" >

            <EditText
                android:id="@+id/input_plate"
                style="@style/EditTextStyle"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:inputType="text"
                android:hint="@string/enter_plate" />

        <Button
            android:id="@+id/button_submit_form"
            android:layout_weight="3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:text="@string/update"
            android:padding="10dp"
            style="@style/SquareButtonStyle"
            android:textColor="?attr/onCardColor" />

    </LinearLayout>

</LinearLayout>