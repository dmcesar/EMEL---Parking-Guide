<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_darker</item>
        <item name="colorAccent">@color/accent</item>


        <item name="android:windowBackground">@color/primary_darker</item>
        <!--
        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>
        <item name="colorButtonNormal">@color/primary_darker</item>
        <item name="android:colorButtonNormal">@color/primary_darker</item>
        -->
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorPrimary">@color/accent</item>
        <item name="android:textColorSecondary">@color/accent</item>
    </style>

    <style name="ParkMeNowButtonStyle">
        <item name ="android:background">@drawable/toolbar_button</item>
        <item name ="android:textColor">@color/accent</item>
    </style>

    <style name="AppNameTheme" parent="@android:style/Widget.TextView">
        <item name="android:fontFamily">@font/quicksand_light</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">50sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ListItemTheme">
        <item name="android:background">@drawable/item_list_background</item>
    </style>

    <style name="VerticalLineSeparatorTheme">
        <item name="android:background">@color/accent</item>
    </style>

    <style name="ItemMainTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

    <style name="ItemTextTheme" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/accent</item>
    </style>

</resources>
