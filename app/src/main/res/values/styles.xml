<resources>

    <style name="LightTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">@color/green</item>
        <item name="onPrimaryColor">@color/white</item>

        <item name="primaryColorLight">@color/lightGreen</item>

        <item name="colorPrimaryDark">@color/darkGreen</item>
        <item name="onPrimaryDarkColor">@color/white</item>

        <!-- Dialogs, popups, toasts, etc -->
        <item name="colorBackgroundFloating">@color/white</item>
        <item name="colorAccent">@color/black</item>

        <item name="backgroundColor">@color/white</item>
        <item name="onBackgroundColor">@color/black</item>

        <!-- Cards background color (vehicles, parking lots) -->
        <item name="cardColor">@color/lightGrey</item>
        <item name="onCardColor">@color/black</item>

        <!-- Buttons background color -->
        <item name="buttonColor">@color/lightGrey</item>
        <item name="onButtonColor">@color/black</item>

        <!-- Toolbar background color -->
        <item name="toolbarColor">@color/green</item>

        <!-- FAB background color -->
        <item name="fabColor">@color/darkGreen</item>
        <item name="fabIconColor">@color/white</item>

        <item name="switchThumbOnColor">@color/darkGreen</item>
        <item name="switchThumbOffColor">@color/lightGrey</item>


        <!-- Drawer toggle icon color -->
        <item name="drawerArrowStyle">@style/DrawerButtonStyle</item>

    </style>

    <style name="DarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="colorPrimary">@color/green</item>
        <item name="onPrimaryColor">@color/white</item>

        <item name="primaryColorLight">@color/lightGreen</item>

        <item name="colorPrimaryDark">@color/black</item>
        <item name="onPrimaryDarkColor">@color/white</item>

        <!-- Dialogs, popups, toasts, etc -->
        <item name="colorBackgroundFloating">@color/darkGrey</item>
        <item name="colorAccent">@color/white</item>

        <item name="backgroundColor">@color/darkGrey</item>
        <item name="onBackgroundColor">@color/white</item>

        <!-- Cards background color (vehicles, parking lots) -->
        <item name="cardColor">@color/grey</item>
        <item name="onCardColor">@color/white</item>

        <!-- Buttons background color -->
        <item name="buttonColor">@color/grey</item>
        <item name="onButtonColor">@color/white</item>

        <!-- Toolbar background color -->
        <item name="toolbarColor">@color/green</item>

        <!-- FAB background color -->
        <item name="fabColor">@color/green</item>
        <item name="fabIconColor">@color/white</item>

        <item name="switchThumbOnColor">@color/green</item>
        <item name="switchThumbOffColor">@color/white</item>

        <!-- Drawer toggle icon color -->
        <item name="drawerArrowStyle">@style/DrawerButtonStyle</item>

    </style>

    <style name="DrawerButtonStyle" parent="Widget.AppCompat.DrawerArrowToggle" >
        <item name="color">?attr/onPrimaryColor</item>
    </style>

    <style name="ItemCardStyle">
        <item name="android:elevation">2dp</item>
        <item name="android:background">@drawable/card</item>
    </style>

    <style name="AppBarButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">?attr/onPrimaryColor</item>
    </style>

    <style name="SquareButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/square_button</item>
        <item name="android:textColor">?attr/onButtonColor</item>
    </style>

    <style name="RoundButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:elevation">2dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:background">@drawable/round_button</item>
        <item name="android:textColor">?attr/onButtonColor</item>
    </style>

    <style name="DrawerHeaderTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HighlightTextStyle">
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyle">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">?attr/onBackgroundColor</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textColorHint">?attr/onBackgroundColor</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <style name="SwitchStyle">
        <item name="android:trackTint">?attr/primaryColorLight</item>
        <item name="android:thumbTint">@drawable/switch_thumb</item>
    </style>
</resources>
