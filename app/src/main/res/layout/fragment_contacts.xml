<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/backgroundColor" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="start"
            android:text="@string/contacts"
            style="@style/HighlightTextStyle"
            android:textColor="?attr/onBackgroundColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:background="?attr/cardColor" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

            <Button
                android:id="@+id/button_service_stations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:drawableStart="@drawable/ic_more"
                android:text="@string/toggle_service_stations"
                android:textColor="?attr/onCardColor"
                style="@style/SquareButtonStyle" />

            <LinearLayout
                android:id="@+id/service_stations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="?attr/cardColor" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_station_A"
                    style="@style/TextStyle"
                    android:textColor="?attr/onCardColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="?attr/onCardColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_station_B"
                    style="@style/TextStyle"
                    android:textColor="?attr/onCardColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="?attr/onCardColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_station_C"
                    style="@style/TextStyle"
                    android:textColor="?attr/onCardColor" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:background="?attr/cardColor" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

            <Button
                android:id="@+id/button_general_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_more"
                android:paddingHorizontal="15dp"
                android:text="@string/toggle_general_information"
                android:textColor="?attr/onCardColor"
                style="@style/SquareButtonStyle" />

            <LinearLayout
                android:id="@+id/general_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="?attr/cardColor" >

                <Button
                    android:id="@+id/button_phone_general_information"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_general_information"
                    android:gravity="start|center_vertical"
                    android:drawableEnd="@drawable/ic_phone"
                    android:textColor="?attr/onCardColor"
                    style="@style/SquareButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="?attr/onCardColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information"
                    style="@style/TextStyle"
                    android:textColor="?attr/onCardColor" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:background="?attr/cardColor">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

            <Button
                android:id="@+id/button_removed_vehicles_park"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_more"
                android:paddingHorizontal="15dp"
                android:text="@string/toggle_removed_vehicles_park"
                android:textColor="?attr/onCardColor"
                style="@style/SquareButtonStyle" />

            <LinearLayout
                android:id="@+id/removed_vehicles_park"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="?attr/cardColor" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/removed_vehicles_park_A"
                    style="@style/TextStyle"
                    android:textColor="?attr/onCardColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="?attr/onCardColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/removed_vehicles_park_B"
                    style="@style/TextStyle"
                    android:textColor="?attr/onCardColor" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="?attr/onCardColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/removed_vehicles_park_C"
                    style="@style/TextStyle"
                    android:textColor="?attr/onCardColor" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:background="?attr/cardColor" >

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

            <Button
                android:id="@+id/button_removed_vehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:drawableStart="@drawable/ic_more"
                android:text="@string/toggle_removed_vehicles"
                android:textColor="?attr/onCardColor"
                style="@style/SquareButtonStyle" />

            <LinearLayout
                android:id="@+id/removed_vehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone"
                android:background="?attr/cardColor" >

                <Button
                    android:id="@+id/button_phone_removed_vehicles"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_removed_vehicles"
                    android:gravity="start|center_vertical"
                    android:drawableEnd="@drawable/ic_phone"
                    android:textColor="?attr/onCardColor"
                    style="@style/SquareButtonStyle" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    android:background="?attr/onCardColor" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information"
                    android:textColor="?attr/onCardColor"
                    style="@style/TextStyle"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="?attr/onCardColor" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="?attr/onCardColor"
                    style="@style/TextStyle"
                    android:text="@string/check_vehicle_removed"/>

                <Spinner
                    android:id="@+id/vehicles_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="10dp"
                    android:background="?attr/cardColor" />

                <Button
                    android:id="@+id/button_send_message"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/SquareButtonStyle"
                    android:gravity="start|center_vertical"
                    android:drawableEnd="@drawable/ic_sms"
                    android:textColor="?attr/onCardColor"
                    android:text="@string/send_text" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="?attr/onCardColor" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>