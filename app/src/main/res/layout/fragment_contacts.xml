<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="8"
    android:background="@color/primary_darker">

    <TextView
          android:layout_weight="1"
          android:layout_width="match_parent"
          android:layout_height="0dp"
          android:text="@string/service_station1_name"
          android:textSize="22sp"
          android:textColor="@color/white"
          android:gravity="bottom|center_horizontal">
      </TextView>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/service_station1_info"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="top|center_horizontal">
    </TextView>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/service_station2_name"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:gravity="bottom|center_horizontal">
    </TextView>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/service_station2_info"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="top|center_horizontal">
    </TextView>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/service_station3_name"
        android:textSize="22sp"
        android:textColor="@color/white"
        android:gravity="bottom|center_horizontal">
    </TextView>

    <TextView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="@string/service_station3_info"
        android:textSize="17sp"
        android:textColor="@color/white"
        android:gravity="top|center_horizontal">
    </TextView>


    <LinearLayout
        android:id="@+id/call_gen_info"
        android:layout_weight="1"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/primary">


        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_phone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp">

        </ImageView>


        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="General informations"
            android:textSize="20sp"
            android:textColor="@color/white"
            >

        </TextView>

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#c0c0c0"/>


    <LinearLayout
        android:id="@+id/call_vehicle_lock_info"
        android:layout_weight="1"
        android:weightSum="6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:background="@color/primary">


        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_phone"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            >

        </ImageView>
        <TextView
            android:layout_weight="5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Vehicle Lock informations"
            android:textSize="20sp"
            android:textColor="@color/white">

        </TextView>

    </LinearLayout>



</LinearLayout>