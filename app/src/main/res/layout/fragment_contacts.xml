<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:gravity="start"
            style="@style/TextTitleTheme"
            android:text="@string/contacts" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:background="@color/primary">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

            <Button
                android:id="@+id/button_service_stations"
                style="@style/DropdownButtonTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:text="@string/toggle_service_stations" />

            <LinearLayout
                android:id="@+id/service_stations"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_station_A"
                    style="@style/TextTheme" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    style="@style/HorizontalLineSeparatorTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_station_B"
                    style="@style/TextTheme" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    style="@style/HorizontalLineSeparatorTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/service_station_C"
                    style="@style/TextTheme" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:background="@color/primary">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

            <Button
                android:id="@+id/button_general_information"
                style="@style/DropdownButtonTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_more"
                android:paddingHorizontal="15dp"
                android:text="@string/toggle_general_information" />

            <LinearLayout
                android:id="@+id/general_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/button_phone_general_information"
                    style="@style/DropdownButtonTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_general_information"
                    android:gravity="start|center_vertical"
                    android:drawableEnd="@drawable/ic_phone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    style="@style/HorizontalLineSeparatorTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information"
                    style="@style/TextTheme" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="vertical"
            android:background="@color/primary">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

            <Button
                android:id="@+id/button_removed_vehicles_park"
                style="@style/DropdownButtonTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_more"
                android:paddingHorizontal="15dp"
                android:text="@string/toggle_removed_vehicles_park" />

            <LinearLayout
                android:id="@+id/removed_vehicles_park"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/removed_vehicles_park_A"
                    style="@style/TextTheme" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    style="@style/HorizontalLineSeparatorTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/removed_vehicles_park_B"
                    style="@style/TextTheme" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    style="@style/HorizontalLineSeparatorTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/removed_vehicles_park_C"
                    style="@style/TextTheme" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:background="@color/primary">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

            <Button
                android:id="@+id/button_removed_vehicles"
                style="@style/DropdownButtonTheme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="15dp"
                android:text="@string/toggle_removed_vehicles" />

            <LinearLayout
                android:id="@+id/removed_vehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <Button
                    android:id="@+id/button_phone_removed_vehicles"
                    style="@style/AppButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/phone_removed_vehicles"
                    android:gravity="start|center_vertical"
                    android:drawableEnd="@drawable/ic_phone"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="10dp"
                    style="@style/HorizontalLineSeparatorTheme"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/general_information"
                    style="@style/TextTheme" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/HorizontalLineSeparatorTheme"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>