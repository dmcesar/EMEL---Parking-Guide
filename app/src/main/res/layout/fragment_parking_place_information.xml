<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pt.ulusofona.ecati.deisi.projetocm_g11.ui.fragments.ParkingPlaceInformationFragment"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="start">

    <TextView
        android:id="@+id/parking_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/type_example" />

    <TextView
        android:layout_marginVertical="10dp"
        android:id="@+id/parking_schedule"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/schedule_example" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="20dp"
        android:layout_marginHorizontal="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:text="@string/observations" />

        <TextView
            android:id="@+id/parking_observations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/observations_example" />

    </LinearLayout>

</LinearLayout>